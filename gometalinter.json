{
  "Vendor": true,
  "Deadline": "4m",
  "Sort": ["linter", "severity", "path", "line"],
  "Exclude": [
    "internal/kube",
    ".*generated.*"
  ],
  "EnableGC": true,
  "Linters": {
      "nakedret": {
        "Command": "nakedret",
        "Pattern": "^(?P<path>.*?\\.go):(?P<line>\\d+)\\s*(?P<message>.*)$"
      }
  },
  "WarnUnmatchedDirective": true,

  "DisableAll": true,
  "Enable": [
    "deadcode",
    "gocyclo",
    "gofmt",
    "goimports",
    "golint",
    "gosimple",
    "ineffassign",
    "interfacer",
    "lll",
    "misspell",
    "nakedret",
    "unconvert",
    "unparam",
    "unused",
    "vet"
  ],

  "Cyclo": 16,
  "LineLength": 200
}
